{
  "name": "docs",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "description": "The documentation for @codewithhong/ui",
  "author": "Lai Tsz Hong <info@honghong.me> (https://github.com/codewithhong/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codewithhong/ui.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "yarn build:utils && yarn build:ui && next build",
    "build:ui": "yarn workspace @codewithhong/ui build",
    "build:utils": "yarn workspace @codewithhong/utils build",
    "clean": "rimraf .next .contentlayer && yarn clean:utils && yarn clean:ui",
    "clean:ui": "yarn workspace @codewithhong/ui clean",
    "clean:utils": "yarn workspace @codewithhong/utils clean",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier -w .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "prettier": "@codewithhong/prettier-config",
  "dependencies": {
    "@tabler/icons-react": "^2.18.0",
    "@vercel/analytics": "^1.0.1",
    "contentlayer": "^0.3.2",
    "framer-motion": "^10.12.10",
    "next": "13.2.5-canary.17",
    "next-contentlayer": "^0.3.2",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-remove-scroll": "^2.5.6",
    "react-use": "^17.4.0",
    "rehype-pretty-code": "^0.9.9",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "shiki": "^0.14.2",
    "unist-util-visit": "^4.1.2",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@codewithhong/eslint-config": "^2.0.0",
    "@codewithhong/prettier-config": "^2.0.0",
    "@codewithhong/tsconfig": "^2.0.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^20.1.1",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "autoprefixer": "^10.4.14",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.40.0",
    "eslint-config-next": "13.2.5-canary.17",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{json,css,scss,md,mdx,js,jsx,ts,tsx,cjs,mjs}": [
      "prettier -c"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@codewithhong/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "18.x"
  }
}
